// Prisma Schema for Restaurant POS System

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Category {
  id          String     @id
  name        String
  description String?
  icon        String?
  order       Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  menuItems   MenuItem[]
}

model MenuItem {
  id          String               @id
  name        String
  description String?
  price       Float
  image       String?              // URL hoặc base64 của hình ảnh
  available   Boolean              @default(true)
  type        String               @default("single") // single (món lẻ), buffet, set_menu
  categoryId  String
  category    Category             @relation(fields: [categoryId], references: [id])
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  orderItems  OrderItem[]
  ingredients MenuItemIngredient[] // Nguyên liệu trong món
}

model Zone {
  id          String   @id
  name        String   @unique // VD: "Tầng 1", "Sân vườn", "VIP", "Ngoài trời"
  description String?
  tables      Table[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Table {
  id        String   @id
  number    Int      @unique
  name      String?  // VD: "Bàn VIP 1", "Bàn ngoài trời"
  capacity  Int      @default(4) // Số người tối đa
  status    String   @default("available") // available, occupied, reserved
  zoneId    String?
  zone      Zone?    @relation(fields: [zoneId], references: [id])
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Customer {
  id        String   @id
  name      String
  phone     String?  @unique
  email     String?
  address   String?
  notes     String?
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id            String      @id
  orderNumber   Int         @unique
  items         OrderItem[]
  subtotal      Float
  tax           Float
  total         Float
  status        String      @default("pending") // pending, confirmed, preparing, ready, served, completed, cancelled
  paymentMethod String?     // cash, card, mobile
  paymentStatus String      @default("unpaid") // unpaid, paid
  tableId       String?
  table         Table?      @relation(fields: [tableId], references: [id])
  customerId    String?
  customer      Customer?   @relation(fields: [customerId], references: [id])
  notes         String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model OrderItem {
  id           String   @id
  orderId      String
  order        Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItemId   String
  menuItem     MenuItem @relation(fields: [menuItemId], references: [id])
  menuItemName String
  quantity     Int
  unitPrice    Float
  totalPrice   Float
  costPrice    Float    @default(0) // Giá vốn tại thời điểm đặt hàng
  notes        String?
  status       String   @default("confirmed") // confirmed, pending_confirm (món mới thêm khi đơn đang phục vụ)
  createdAt    DateTime @default(now())
}

model User {
  id        String   @id
  email     String   @unique
  name      String
  password  String
  role      String   @default("waiter") // owner, manager, waiter, kitchen, cashier
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Restaurant {
  id        String   @id @default(cuid())
  name      String
  address   String?
  phone     String?
  email     String?
  logo      String?
  taxRate   Float    @default(8.0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Branch {
  id        String   @id @default(cuid())
  name      String
  address   String?
  phone     String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Nguyên liệu
model Ingredient {
  id          String               @id
  name        String               @unique
  unit        String               // Đơn vị: kg, g, lít, ml, cái, gói...
  costPrice   Float                // Giá mua vào (giá vốn)
  stock       Float                @default(0) // Số lượng tồn kho
  minStock    Float                @default(0) // Số lượng tối thiểu cảnh báo
  description String?
  menuItems   MenuItemIngredient[]
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
}

// Bảng trung gian liên kết Món ăn - Nguyên liệu (với số lượng sử dụng)
model MenuItemIngredient {
  id           String     @id
  menuItemId   String
  menuItem     MenuItem   @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  ingredientId String
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)
  quantity     Float      // Số lượng nguyên liệu cần dùng cho món
  createdAt    DateTime   @default(now())

  @@unique([menuItemId, ingredientId])
}
